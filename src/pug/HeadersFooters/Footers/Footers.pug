
mixin footer-list-nav(title, name1, name2, name3, name4)
    .footer-list__title= title
    ul.footer-list__list
        li= name1
        li= name2
        li= name3
        li= name4

mixin footer
    .footer-container
        .footer-container__menu
            .footer-container__brend   
                .footer-container__logo
                    +colors-logo
                    +text-logo
                .footer-container__brend-text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
            .footer-container__nav
                +footer-list-nav('навигация', 'О нас', 'Новости', 'Служба поддержки', 'Услуги')
            .footer-container__about
                +footer-list-nav('о нас', 'О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы')
            .footer-container__support
                +footer-list-nav('Служба поддержки', 'Соглашения', 'Сообщества', 'Связь с нами')
            .footer-container__subscription
                .footer-list__title Подписка
                .footer-container__brend-text Получайте специальные предложения и новости сервиса
                +subscription-text-field('Email')
        .footer-container___copyright
            .footer-container___copyright-text Copyright © 2018 Toxin отель. Все права защищены.
            .footer-container___copyright-social
                +social


mixin footer-mobile
    .footer-mobile
        .footer-mobile__logo
            +colors-logo
            +text-logo
        .footer-mobile___copyright-text Copyright © 2018 Toxin отель. Все права защищены.
        .footer-mobile___copyright-social
            +social



